<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme - Green and White -->
    <style name="Base.Theme.EasyOrderAI" parent="Theme.Material3.Light.NoActionBar">
        <!-- Primary colors - Green -->
        <item name="colorPrimary">@color/green_primary</item>
        <item name="colorPrimaryDark">@color/green_primary_dark</item>
        <item name="colorPrimaryContainer">@color/green_primary_light</item>
        <item name="colorOnPrimary">@color/white</item>
        <item name="colorOnPrimaryContainer">@color/green_primary_dark</item>
        
        <!-- Secondary colors -->
        <item name="colorSecondary">@color/green_accent</item>
        <item name="colorSecondaryContainer">@color/green_primary_light</item>
        <item name="colorOnSecondary">@color/white</item>
        
        <!-- Surface colors - White/Light -->
        <item name="colorSurface">@color/white</item>
        <item name="colorSurfaceVariant">@color/surface_light</item>
        <item name="colorOnSurface">@color/text_primary</item>
        <item name="colorOnSurfaceVariant">@color/text_secondary</item>
        
        <!-- Background -->
        <item name="android:colorBackground">@color/white</item>
        <item name="colorOnBackground">@color/text_primary</item>
        
        <!-- Status bar -->
        <item name="android:statusBarColor">@color/green_primary</item>
        <item name="android:navigationBarColor">@color/white</item>
        
        <!-- Error color -->
        <item name="colorError">@color/error</item>
        <item name="colorOnError">@color/white</item>
    </style>

    <style name="Theme.EasyOrderAI" parent="Base.Theme.EasyOrderAI" />
    
    <!-- Green Button Style -->
    <style name="GreenButton" parent="Widget.Material3.Button">
        <item name="backgroundTint">@color/green_primary</item>
        <item name="android:textColor">@color/white</item>
    </style>
    
    <!-- Outlined Green Button -->
    <style name="GreenOutlinedButton" parent="Widget.Material3.Button.OutlinedButton">
        <item name="strokeColor">@color/green_primary</item>
        <item name="android:textColor">@color/green_primary</item>
    </style>
    
    <!-- Bottom Navigation Active Indicator -->
    <style name="App.ActiveIndicator" parent="Widget.Material3.BottomNavigationView.ActiveIndicator">
        <item name="android:color">@color/green_primary</item>
    </style>
    
    <!-- Splash Screen Theme -->
    <style name="Theme.EasyOrderAI.Starting" parent="Theme.SplashScreen">
        <item name="windowSplashScreenBackground">@color/green_primary</item>
        <item name="windowSplashScreenAnimatedIcon">@drawable/app_logo</item>
        <item name="postSplashScreenTheme">@style/Theme.EasyOrderAI</item>
    </style>
</resources>